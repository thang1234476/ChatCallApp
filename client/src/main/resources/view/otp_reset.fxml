<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER" spacing="25" style="-fx-background-color: #f8f9fa;"
      prefWidth="500" prefHeight="650">

    <padding>
        <Insets top="40" right="50" bottom="40" left="50"/>
    </padding>

    <Label text="Đặt lại mật khẩu" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    <Label text="Nhập mã OTP 6 chữ số và mật khẩu mới" style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;"/>

    <VBox spacing="15" alignment="CENTER">
        <Label text="Mã OTP đã gửi đến email" style="-fx-font-size: 14;"/>
        <HBox spacing="12" alignment="CENTER">
            <TextField fx:id="otp1" prefWidth="60" prefHeight="60" alignment="CENTER"
                       style="-fx-font-size: 24; -fx-background-radius: 12;"/>
            <TextField fx:id="otp2" prefWidth="60" prefHeight="60" alignment="CENTER"
                       style="-fx-font-size: 24; -fx-background-radius: 12;"/>
            <TextField fx:id="otp3" prefWidth="60" prefHeight="60" alignment="CENTER"
                       style="-fx-font-size: 24; -fx-background-radius: 12;"/>
            <TextField fx:id="otp4" prefWidth="60" prefHeight="60" alignment="CENTER"
                       style="-fx-font-size: 24; -fx-background-radius: 12;"/>
            <TextField fx:id="otp5" prefWidth="60" prefHeight="60" alignment="CENTER"
                       style="-fx-font-size: 24; -fx-background-radius: 12;"/>
            <TextField fx:id="otp6" prefWidth="60" prefHeight="60" alignment="CENTER"
                       style="-fx-font-size: 24; -fx-background-radius: 12;"/>
        </HBox>
        <Hyperlink text="Gửi lại OTP?" onMouseClicked="#resendOtp"/>
    </VBox>

    <VBox spacing="12" prefWidth="360">
        <PasswordField fx:id="newPassField" promptText="Mật khẩu mới (tối thiểu 6 ký tự)"/>
        <PasswordField fx:id="confirmPassField" promptText="Xác nhận mật khẩu"/>
    </VBox>

    <Label fx:id="statusLabel" text="" style="-fx-font-size: 14; -fx-min-height: 30;"/>

    <Button fx:id="resetButton" text="Đặt lại mật khẩu" onAction="#resetPassword"
            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16;
                   -fx-pref-width: 300; -fx-pref-height: 50; -fx-background-radius: 30;"/>

    <Hyperlink text="Quay lại đăng nhập" onMouseClicked="#backToLogin"/>
</VBox>