<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER" spacing="25" style="-fx-background-color: #f8f9fa;"
      prefWidth="500" prefHeight="600">

    <padding>
        <Insets top="40" right="50" bottom="40" left="50"/>
    </padding>

    <Label text="Quên mật khẩu?" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    <Label text="Nhập email để nhận mã OTP" style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;"/>

    <TextField fx:id="emailField" promptText="example@gmail.com" prefWidth="360"
               style="-fx-background-radius: 12; -fx-padding: 15;"/>

    <Label fx:id="statusLabel" text="" style="-fx-font-size: 14; -fx-min-height: 30;"/>

    <Button fx:id="sendButton" text="Gửi mã OTP" onAction="#sendOtp"
            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16;
                   -fx-pref-width: 300; -fx-pref-height: 50; -fx-background-radius: 30;"/>

    <Hyperlink text="Quay lại đăng nhập" onMouseClicked="#backToLogin"
               style="-fx-text-fill: #95a5a6;"/>
</VBox>